            button(type='button').slider-item__info-link
              +icon('arrow-right', 'arrow__icon') 
        li.horizontal-slider__item.slider-item
          .slider-item__info
            .slider-item__info-subtitle.subtitle-left Surf
            .slider-item__info-title West Shore
            .slider-item__info-subtext.subtitle-left Condition
            .slider-item__info-text Radical
            button(type='button').slider-item__info-link
              +icon('arrow-right', 'arrow__icon') 
        li.horizontal-slider__item.slider-item
          .slider-item__info
            .slider-item__info-subtitle.subtitle-left Surf
            .slider-item__info-title East Shore
            .slider-item__info-subtext.subtitle-left Condition
            .slider-item__info-text Radical
            button(type='button').slider-item__info-link
              +icon('arrow-right', 'arrow__icon')
