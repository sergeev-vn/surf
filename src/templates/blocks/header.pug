header.header
  .header__slider
    .header__slider-btns
      .slider-btns
        button(type='button').slider-btn.slider-btn--prev
          +icon('arrow-left', 'arrow__icon') 
        button(type='button').slider-btn.slider-btn--next
          +icon('arrow-right', 'arrow__icon') 
    .header__slider-slider
      ul.horizontal-slider
        li.horizontal-slider__item.slider-item
          .slider-item__info
            .slider-item__info-subtitle.subtitle-left Surf
            .slider-item__info-title North Shore
